'use strict';

const t = require('../..');

t.test('throws', t => {
  t.throws(
    () => {}
  );
  t.throws(
    () => {
      throw new Error('test');
    }
  );
  t.throws(
    () => {
      throw new Error('test');
    },
    /xxx/
  );
  t.throws(
    () => {},
    /test/,
    'throws a test error'
  );
  t.end();
});
